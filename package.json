{
  "name": "myant",
  "version": "0.1.0",
  "description": "WX & AliPay UI Components built on uniApp",
  "main": "lib/index.js",
  "module": "es/index.js",
  "style": "lib/index.css",
  "scripts": {
    "lint": "npx myant-cli lint",
    "test": "npx myant-cli test",
    "dev:mini": "npx myant-cli dev:mini --target mini",
    "dev:site": "npx myant-cli dev:mini --target site",
    "build": "npx myant-cli build",
    "release": "npx myant-cli release"
  },
  "repository": "https://github.com/miya-fe/myant",
  "sideEffects": false,
  "files": [
    "es",
    "lib",
    "types"
  ],
  "keywords": [
    "myant",
    "miya-ant",
    "ant",
    "uniapp",
    "wx",
    "weixin",
    "alipay",
    "components"
  ],
  "author": "miya-fe",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ls-lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,less}": "stylelint --fix"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@myant/vue-ts"
    ]
  },
  "stylelint": {
    "extends": [
      "@myant/stylelint-config"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "never"
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8"
  ],
  "dependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@ls-lint/ls-lint": "^1.9.2",
    "@myant/cli": "^1.0.9",
    "@myant/eslint-config-vue-ts": "^1.0.0",
    "@myant/stylelint-config": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  }
}
